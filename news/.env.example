# App Settings
DEBUG=true

# MongoDB
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB=news_feed_db

# Redis/Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# LLM (LM Studio - API customizada com campo 'input')
# O c√≥digo detecta automaticamente o modelo carregado no LM Studio
LM_API_URL=http://localhost:1234/api/v1/chat
LM_MODEL=phi-3-mini-4k-instruct # Exemplo: 'phi-3-mini-4k-instruct', 'phi-3-mini-8k-instruct', 'phi-3-mini-16k-instruct'
LM_API_TOKEN=
LM_TIMEOUT=180
LM_MAX_RETRIES=2

# WordPress (plugin content-receiver)
WORDPRESS_URL=http://localhost:8080
WORDPRESS_API_KEY=
WORDPRESS_TIMEOUT=30
